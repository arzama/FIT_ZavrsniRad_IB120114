                                        </tr>*@
                                        <tr class="total">
                                            <td>Total</td>
                                            <th>@Korpa.GetTotal() KM</th>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>


                </div>
                <!-- /.col-md-9 -->

                <!-- /.col-md-3 -->

            
            <!-- /.container -->
        </div>
        <!-- /#content -->
    


    </div>
    <!-- /#all -->

